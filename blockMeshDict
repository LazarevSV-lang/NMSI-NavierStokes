FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
convertToMeters 1;

vertices
(
    // axial (x), radial (y), wedge in z
    (0     0     0)    // 0: nose center
    (0.01  0     0)    // 1: small axial step
    (0.10  0     0)    // 2: farfield axial
    (0     0.01  0)    // 3: radial near nose
    (0.10  0.03  0)    // 4: farfield radial
    (0     0     0.001) // 5: wedge
    (0.01  0     0.001) // 6
    (0.10  0     0.001) // 7
    (0     0.01  0.001) // 8
    (0.10  0.03  0.001) // 9
);

blocks
(
    hex (0 1 3 3 5 6 8 8) (40 40 1) simpleGrading (8 8 1)
    hex (1 2 4 3 6 7 9 8) (200 120 1) simpleGrading (10 10 1)
);

edges
(
    arc  (0 3) (0.005 0.005 0)   // hemispherical nose of ~R=5 mm (illustrative)
);

boundary
(
    axis
    {
        type wedge;
        faces ((0 1 6 5) (1 2 7 6));
    }
    symmetryPlane
    {
        type wedge;
        faces ((3 0 5 8) (4 3 8 9));
    }
    body
    {
        type wall;
        faces ((0 3 8 5) (1 0 5 6));
    }
    inlet
    {
        type patch;
        faces ((2 4 9 7));
    }
    farfield
    {
        type patch;
        faces ((3 1 6 8));
    }
);

mergePatchPairs();
