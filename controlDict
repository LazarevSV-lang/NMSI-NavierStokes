application     rhoCentralFoam;
deltaT          1e-6;
writeInterval   200;
runTimeModifiable yes;

functions
{
  vortMax
  {
    type            fieldMinMax;
    fields          (mag(curl(U)));
    writeControl    timeStep;
    writeInterval   200;
  }

  kineticEnergy
  {
    type            volFieldValue;
    regionType      all;
    operation       sum;
    fields          ((U magSqr));
    writeControl    timeStep;
    writeInterval   200;
  }
}
